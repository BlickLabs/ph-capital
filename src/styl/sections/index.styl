.home
  &-information
    background-image url('../img/bg-1.jpg')
    background-position center center
    background-size cover
    background-attachment fixed
    height 100vh
    display flex
    align-items center
    position relative

    @media $sm
      justify-content center
      align-items center
      padding 0 20px
    @media $xs
      align-items flex-start
      padding-top 90px

    &-content
      margin 0 0 0 16.51%
      @media $sl
        margin 0 0 0 5%
      @media $sm
        margin 0
      h1
        color white
        font-size remify(31)
        line-height 2.29
        letter-spacing 4.6px
        font-weight $normal
        margin-top -15px 0 0 0
        text-transform uppercase
        @media $lg
          font-size remify(27)
        @media $sl
          font-size remify(25)
        @media $sm
          text-align center
          line-height 2.25
          letter-spacing 2.4px
          br
            display none
        span
          font-weight $medium
          font-style italic
          @media $xs
            letter-spacing 2.2px

      h2
        color #5e78b3
        font-size remify(17)
        font-weight $medium
        line-height 4.24
        letter-spacing 8px
        text-align left
        text-transform uppercase

        @media $sm
          text-align center
          font-size remify(17)
          line-height 2.08
          letter-spacing 5.6px

    p
      position absolute
      display flex
      bottom 4%
      left 0
      right 0
      justify-content center
      align-items center
      @media $sm
        flex-direction column
        text-align center
        img
          order 2
      span
        margin-left 36px
        font-family "Futura"
        font-weight $medium
        line-height 5.54
        letter-spacing 5px
        color white
        @media $sm
          margin 0
          order 1
        @media $xs
          font-size remify(11)
          line-height 6.55
          letter-spacing 4.2px
      img
        @media $xs
          height 24px
          width 24px

  &-investment
    display flex
    align-items flex-start
    img
      width 38%
      height auto
    &-content
      padding 82px 0 0 175px
      display flex
      flex-direction column
      justify-content center
      align-items flex-start
      @media $lg
        padding 60px 0 0 100px
      @media $sl
        padding 30px 0 0 60px
    &-information
      width 75%
      margin 10px 0 43px 0
      @media $sl
        margin 10px 0 25px 0
  &-strategy
    display flex
    flex-direction row
    align-items center
    padding-bottom 50px
    &-header
      flex-direction column
      justify-content center
      align-items flex-start
      flex-basis 25%
      margin 51px 0 0 72px
      @media $lg
        margin 41px 0 0 59px
    &-information
      flex-basis 38%
      margin 73px 0 0 75px
      @media $lg
        margin 59px 0 0 60px
      @media $sl
        margin 59px 20px 0 10px
    &-image
      flex-basis 23%
      margin 51px 0 0 0
      @media $sl
        margin 51px 0 0 0
      img
        width 100%
        height auto

  &-smart
    display flex
    position relative
    &-left
      background-image url('../img/smart-1@2x.jpg')
      background-position center center
      background-size cover
      height 451px
      flex-basis 53%
      @media $sl
        height 380px
      &-content
        position relative
        z-index 2
        margin 84px 0 0 212px
      &-title
        color white
    &-right
      flex-basis 47%
      display flex
      align-items center
      padding 0 100px
      @media $sl
        padding 0 50px
    &-line
      height 1px
      width 368px
      position absolute
      background-color #5e78b3
      top 95px
      right 29%
      @media $sl
        top 50px

  &-team
    padding-bottom 69px
    padding-top 45px
    position relative
    background-color #f6f6f6
    img
      position absolute
      right 0
      top -10%
      width 33%
      @media $lg
        width 30%
        top -15%
      @media $sl
        width 35%
        top -2.5%

    &-content
      display flex
      flex-direction column
      justify-content center
      align-items flex-start
      width 38.75%
      margin-left 8.89%
    &-number
      font-size remify(16)
      line-height 4.5
      letter-spacing 7.5px
      color #5e78b3
    &-title
      font-size remify(30)
      line-height 1.63
      letter-spacing 3.6px
      color #0c0d11
      margin 0
      font-weight $normal
    &-information
      font-size remify(15)
      font-weight normal
      line-height 2.13
      letter-spacing 0.2px
      color #0c0d11
      margin 10px 0 43px 0
    &-button
      color white
      text-decoration none
      background-color #0c0d11
      font-size remify(12)
      letter-spacing 2px
      text-align center
      padding 10px 57px
  &-partner
    display flex
    &-left
      background-image url('../img/partner-1@2x.jpg')
      background-position center center
      background-size cover
      min-height 451px
      flex-basis 55%
      display flex
      align-items flex-start
      justify-content flex-end
      &-content
        position relative
        z-index 2
        width 40%
        margin 75px 0 0 0
        @media $lg
          width 45%
        @media $sl
          width 50%
      &-number
        font-size remify(16)
        line-height 4.5
        letter-spacing 7.5px
        color #5e78b3
      &-title
        color white
        padding-bottom 20px
        border-bottom 1px solid #5e78b3
    &-right
      flex-basis 45%
      display flex
      padding 0 110px
      flex-direction column
      align-items flex-start
      justify-content center
      @media $sl
        padding 0 50px
      img
        height 103px
        width auto
        @media $lg
          height 87px
        @media $sl
          height 70px
      p
        margin 34px 0 0 0
        color #333333
        a
          color #333
          text-decoration underline
  &-vre
    display flex
    position relative
    padding 0 0 121px 0
    &-image
      position absolute
      top 47px
      right 0
      width 33.75%
    &-left
      flex-basis 72%
      display flex
      padding 64px 159px 0 62px
      @media $sl
        padding 64px 100px 0 40px
    &-right
      flex-basis 28%
      background-color #212c3e
    &-content
      margin 0 0 0 48px
      h3
        margin -8px 0 0 0
    &-list
      list-style none
      padding 0
      margin 48px 0 0 0
      &-item
        display flex
        align-items center
        margin-bottom 15px
        &-number
          font-size remify(16)
          line-height 4.5
          letter-spacing 7.5px
          color #5e78b3
        &-text
          font-family "Futura"
          font-weight $normal
          line-height: 1.69;
          letter-spacing 0.2px
          color #333333
          margin-left 48px
          span
            font-weight $bold
  &-track
    padding 0 6% 82px 6%
    &-number
      font-size remify(16)
      line-height 4.5
      letter-spacing 7.5px
      color #5e78b3
      margin 0
    &-title
      font-weight $medium
      font-size remify(30)
      line-height 1.43
      letter-spacing 3.6px
      color black
      margin 0
    &-container
      display flex
      margin 27px auto 0 auto
      align-items center
    &-image
      margin 0
      padding 0
      position relative
      &:nth-child(1)
        width 32.5%
      &:nth-child(2)
        width 35%
      &:nth-child(3)
        width 32.5%
      &:hover
        figcaption
          display none
        .home-track-image-hover
          display flex
      img
        width 100%
        height auto
      figcaption
        position absolute
        bottom 0
        left 0
        right 0
        font-size 15px
        font-weight 500
        font-style normal
        font-stretch normal
        letter-spacing 1.8px
        text-align center
        color #ffffff
        opacity 0.89
        background-color #212c3e
        height 65px
        line-height 65px
        @media $lg
          height 57.5px
          line-height 57.5px
        @media $sl
          height 50px
          line-height 50px

      &-hover
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        display none
        opacity 0.93
        background-color #212c3e
        align-items center
        justify-content center
        flex-direction column
        span
          font-size remify(17)
          font-weight $medium
          line-height 1.41
          letter-spacing 2px
          text-align center
          color #5e78b3

        a
          width 30%
          height 30px
          border solid 1px #ffffff
          font-size remify(11)
          font-weight $medium
          letter-spacing 1.8px
          line-height 30px
          text-align center
          color white
          margin 40px 0 0 0
          cursor pointer
  &-contact
    img
      width 44%
      height auto
    display flex
    padding 82px 0 0 0
    align-items flex-end
    @media $sl
      padding 42px 0 0 0
    &-content
      padding 0 152px 0 158px
      width 100%
      @media $lg
        padding 0 120px 0 126px
      @media $sl
        padding 0 70px 0 76px
    &-number
      font-weight $medium
      font-size remify(16)
      line-height 4.5
      letter-spacing 7.5px
      color #5e78b3
      margin 0
    &-title
      font-weight $medium
      font-size remify(30)
      line-height 1.43
      letter-spacing 3.6px
      color #0c0d11
      margin 0 0 38px 0
    &-form
      margin 0 0 66px 0
      overflow hidden
      label
        height 36px
        font-size remify(15)
        font-weight normal
        line-height 2.27
        letter-spacing 0.1px
        color #0c0d11
        display block
        margin 0 0 10px 0
      input
        border-bottom 1px solid #979797
        border-top transparent
        border-right transparent
        border-left transparent
        padding 5px
        width 100%
        margin-bottom 10px
      textarea
        border 1px solid #979797
        outline none
        resize none
        width 100%
        padding 5px
        height 92px
      button
        width 138px
        height 36px
        background-color #0c0d11
        font-size 12px
        font-weight $medium
        line-height 36px
        letter-spacing 2px
        text-align center
        color #ffffff
        margin 42px 0 0 0
        float right

