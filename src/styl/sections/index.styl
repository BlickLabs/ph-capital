.home
  &-information
    background-image url('../img/bg-1.jpg')
    background-position center center
    background-size cover
    background-attachment fixed
    height 833px
    display flex
    align-items flex-start
    position relative
    padding-top 227px
    @media screen and (max-width: 920px)
      justify-content center
      align-items center
      padding 0 60px
    @media $xs
      height 524px
      align-items flex-start
      padding 0 20px 0 20px
    &-content
      margin 0 0 0 16.51%
      @media screen and (max-width: 1120px)
        margin 0 0 0 5%
      @media screen and (max-width: 920px)
        margin 0
      @media $xs
        margin-top 92px
      h2
        color #5e78b3
        font-size remify(17)
        font-weight $medium
        line-height 4.24
        letter-spacing 8px
        text-align left
        text-transform uppercase
        margin 0
        br
          display none
        @media screen and (max-width: 920px)
          text-align center
          font-size remify(17)
          line-height 2.08
          letter-spacing 5.6px
          margin-bottom 41px
          br
            display block
        @media $xs
          font-size remify(12)

    &-text
      color white
      font-size remify(31)
      line-height 2.29
      letter-spacing 4.6px
      font-weight $normal
      text-transform uppercase
      margin 0
      @media $lg
        font-size remify(27)
      @media screen and (max-width: 1120px)
        font-size remify(25)
      @media screen and (max-width: 920px)
        display none
      span
        font-weight $medium
        font-style italic
        @media $xs
          letter-spacing 2.2px

    &-text-mobile
      color white
      font-size remify(25)
      font-weight $normal
      text-transform uppercase
      margin 0
      text-align center
      line-height 2.25
      letter-spacing 2.4px
      display none
      @media screen and (max-width: 920px)
        display block
      @media $xs
        font-size remify(16)
        line-height 2
        letter-spacing 2.4px
        text-align center
        color #ffffff
      span
        font-weight $medium
        font-style italic
        @media $xs
          letter-spacing 2.2px

    &-action
      position absolute
      display flex
      bottom 77px
      left 127px
      right 0
      margin 0
      align-items center
      justify-content flex-start
      @media screen and (max-width: 1120px)
        left 5%
      @media screen and (max-width: 920px)
        flex-direction column
        text-align center
        justify-content center
        align-items center
        left 0
        img
          order 2
      span
        margin-left 36px
        font-family "Futura"
        font-weight $medium
        line-height 5.54
        letter-spacing 5px
        color white
        font-size remify(13)
        @media screen and (max-width: 920px)
          margin 0
          order 1
        @media $xs
          line-height 4
          font-size remify(11)
          letter-spacing 4.2px
      img
        @media $xs
          height 24px
          width 24px

