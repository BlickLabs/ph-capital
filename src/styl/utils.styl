.ph-number
  font-size remify(16)
  line-height 4
  letter-spacing 7.5px
  color #5e78b3
  font-weight $medium
  @media $lg
    font-size remify(14)
    line-height 3
  @media $xs
    font-size remify(11)
    line-height 6.55
    letter-spacing 5.2px
.ph-title
  font-size remify(30)
  line-height 1.63
  letter-spacing 3.6px
  color #0c0d11
  margin 0
  font-weight $medium
  text-transform uppercase
  @media $lg
    font-size remify(25)
    line-height 1.30
  @media $xs
    font-size remify(16px)
    line-height 1.44
    letter-spacing 1.9px

.ph-description
  font-size remify(16)
  font-weight $normal
  line-height 2.13
  letter-spacing 0.2px
  color #0c0d11
  @media $lg
    line-height 1.8
  @media $xs
    font-size remify(12)
    line-height 2
    letter-spacing 0.1px
.ph-button
  color white
  text-decoration none
  background-color #0c0d11
  font-size remify(12)
  letter-spacing 2px
  text-align center
  padding 12.5px 57px
  @media $sl
    font-size remify(11)


.owl-theme .owl-dots .owl-dot.active span,
.owl-theme .owl-dots .owl-dot.active span:hover
  background: #212c3e
.owl-theme .owl-dots .owl-dot span:hover
  background #212c3e

.ph-modal
  display none
  position fixed
  z-index 13
  padding-top 100px
  left 0
  top 0
  width 100%
  height 100%
  overflow auto
  background-color rgba(0,0,0,0.52)
  @media $xs
    padding-top 20px
  &-content
    background-color #fefefe
    margin auto
    padding 18px 0 30px 0
    border 1px solid #888
    width 80%
    position relative
    @media $sl
      width 90%
    @media $xs
      margin auto
  &-close
    color #979797
    font-size 40px
    font-family Futura
    position absolute
    top 10px
    right 20px
    cursor pointer
  &-title
    font-size remify(30)
    font-weight $medium
    line-height 1.43
    letter-spacing 3.6px
    text-align center
    color #0c0d11
  &-items
    border-bottom solid 1px #e0e0e0
    display flex
    padding 6px 56px 0 56px
    width 100%
    justify-content space-around
    flex-wrap wrap
    @media $sl
      padding 6px 30px 0 30px
    // @media $xs
    // display none
  &-item.active
    border-bottom 6px solid #212c3e
  &-item
    font-size remify(13)
    font-weight $medium
    line-height 3.85
    letter-spacing 3px
    text-align center
    color #212c3e
    border-bottom 6px solid transparent
    cursor pointer
    &:hover
      border-bottom 6px solid #212c3e
    &-container
      display none
    &-container.show
      display block
    &-title
      font-size remify(16)
      font-weight $medium
      line-height 4.5
      letter-spacing 7.5px
      text-align center
      color #5e78b3
      @media $xs
        display none
    &-text
      font-size remify(16)
      line-height 2.13
      letter-spacing 0.2px
      text-align center
      color #333333
      width 67%
      margin 0 auto
      @media $sl
        width 80%
      @media $xs
        font-size remify(12)
        line-height 2
        letter-spacing 0.1px
        text-align center
        color #333333
        margin 10px auto 0 auto
      &-black
        font-size remify(20)
        font-weight $medium
        line-height 1.7
        letter-spacing 0.2px
        text-align center
        color #333333
        @media $xs
          font-size remify(12)
          margin-top 15px
    &-address
      font-size 16px
      line-height 2.13
      letter-spacing 0.2px
      color #333333
      width 25%
      margin 0 auto
      @media $sl
        width 30%
      @media $sm
        width 40%
        margin 20px auto 0 auto
      @media $xs
        width 90%
        margin 0 auto
      span
        font-weight $bold
        margin-left 10%
      &-quotes
        font-size remify(16)
        font-weight $normal
        line-height 4.5
        letter-spacing normal
        color #5e78b3
        