.navbar
  align-items center
  background-color transparent
  display flex
  height 63px
  justify-content space-between
  left 0
  padding 48px 84px
  position fixed
  top 0
  width 100%
  z-index 12

  &-logo
    height auto
    width 108px
    margin 0 0 0 18px

    @media $lg
      margin 7px 0 0 18px

  &-scroll
    align-items center
    background-color #212c3e
    box-shadow 0 6px 8px 0 rgba(0,0,0,0.2)
    height 63px

  &-option
    color white
    font-family "Futura"
    font-size remify(11)
    line-height 6.55
    letter-spacing 3.4px

    //&:hover:before,
    //&.active-section:before
    //  background-color white
    //  bottom -8px
    //  content ""
    //  height 3px
    //  position absolute
    //  width 100%
    //
    //&:hover
    //  color white

    &-container
      display flex
      flex-direction row

    &-content
      margin-left 20px
      position relative

    &-separator
      color #5e78b3
      font-size remify(11)
      line-height 72px
      letter-spacing 3.38px



.hamburger
  &-visibility
    position absolute

  &-menu
    &-container
      display none

.active-section
  color white

@media screen and (max-width: 1260px)
  .navbar
    justify-content space-between
    height 70px
    padding 0 18px

    &-option
      &-container
        display none

  .hamburger
    background-color transparent
    display flex
    height 33px
    justify-content center
    width 33px

    &-visibility
      cursor pointer
      position initial

    &-logo
      width 94px
      height auto

    &-close
      height 16px
      width 16px

    &-menu
      &-container
        background-color #212c3e
        display inline
        bottom 0
        right  0
        overflow scroll
        padding-bottom 50px
        position fixed
        top 0
        -webkit-transition width 0.5s
        transition width 0.5s
        width 0%
        z-index 13

      &-header
        align-items center
        display flex
        flex-direction row
        justify-content space-between
        padding 22px 36px 50px 36px

      &-body
        margin-left 36px

    &-text
      font-weight $medium
      line-height 2.08
      letter-spacing 5.6px
      color white
      padding 10px 0

      &-container
        margin 35px 0

    &-active,
    &-text:hover
      font-weight bold
      text-decoration underline

    &-line
      &-icon
        background-color #fff
        height 2px
        width 20px

        &-container
          display flex
          flex-direction column
          justify-content center

        &:nth-child(2)
          margin 4px 0

        &:last-child
          width 12px
